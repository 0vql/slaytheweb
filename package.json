{
  "name": "slaytheweb",
  "version": "0.23.0",
  "license": "AGPL-3.0-or-later",
  "homepage": "https://slaytheweb.cards",
  "repository": "https://github.com/oskarrough/slaytheweb",
  "bugs": "https://github.com/oskarrough/slaytheweb/issues",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "lint": "eslint",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:coverage": "c8 ava",
    "build": "astro build",
    "preview": "astro preview",
    "docs": "rm -rf ./docs; cd src/game; docco *.js; mv docs ../../docs",
    "release": "release-it"
  },
  "devDependencies": {
    "@eslint/css": "^0.11.0",
    "@eslint/js": "^9.34.0",
    "astro": "5.13.5",
    "ava": "^6.4.1",
    "c8": "^10.1.3",
    "docco": "^0.9.2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^54.1.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4"
  },
  "dependencies": {
    "@astrojs/preact": "4.1.0",
    "driver.js": "^1.3.6",
    "gsap": "^3.13.0",
    "htm": "^3.1.1",
    "immer": "^10.1.1",
    "preact": "^10.27.1",
    "superjson": "^2.2.2"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": false,
      "changelog": "npx auto-changelog --hide-credit --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs"
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p"
    }
  }
}
