---
import Layout from '../layouts/Layout.astro'
import '../styles/index.css'

import {cards} from '../../content/cards.js'
import {Card} from '../components/cards.js'
import {createCard} from '../../game/cards'
---

<Layout title="Slay the Web">
	<article class="Container">
		<p><a class="Button" href="/stats">&larr; Highscores</a></p>

		<header class="Header">
			<h1 medium>Slay the Web</h1>
			<h2>{cards.length} Card Collection</h2>
		</header>


		<div class="Box Box--text Box--full">
			<div class="Cards Cards--grid">
				{cards.map((card) => (
					<div>
						{card.name}<br />
						{createCard(card.name, true).name}
					</div>
				))}
			</div>
		</div>
	</article>
</Layout>
